<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="person.justin.blog.mapper.UserMapper">

    <resultMap id="BASE_RESULT_MAP" type="person.justin.blog.pojo.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="alias" property="alias"/>
        <result column="sort" property="sort"/>
        <result column="has_delete" property="hasDelete"/>
        <result column="create_time" property="createTime"/>
        <result column="creator" property="creator"/>
        <result column="update_time" property="updateTime"/>
        <result column="updater" property="updater"/>
    </resultMap>

    <sql id="BASE_SQL">
        id
        ,name
        ,alias
        ,sort
        ,has_delete
        ,create_time
        ,creator
        ,update_time
        ,updater
    </sql>

    <select id="listRole" resultMap="BASE_RESULT_MAP">
        select name
        from blog_role
        where id in (select role_id
        where user_id = #{userId})
        order by sort
    </select>
</mapper>